<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.flesh.pokeapp.views.LoadingView
        android:id="@+id/lvLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:lv_image="@drawable/pikachu_running" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/vertical_margin"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/vertical_margin">

        <ImageView
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_missingno"
            android:id="@+id/ivPokemonSprite"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/tvPokemonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            tools:text="@string/pokemon_name_temp" />

        <TextView
            android:id="@+id/tvPokemonTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tools:text="@string/pokemon_types_temp" />

        <TextView
            android:id="@+id/tvPokemonWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tools:text="@string/pokemon_weight_temp" />

        <TextView
            android:id="@+id/tvPokemonHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tools:text="@string/pokemon_height_temp" />


    </LinearLayout>


</FrameLayout>